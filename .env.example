# =============================================================================
# Abejar PQC VPN Router - Environment Configuration
# =============================================================================
# Copy this file to .env and configure your settings
# =============================================================================

# System
PUID=1000
PGID=1000
TZ=UTC

# Post-Quantum Cryptography
PQC_ENABLED=true
PQC_ALGORITHM=kyber1024
PQC_HYBRID_MODE=true
PQC_KEY_ROTATION_HOURS=24

# VPN Configuration
VPN_INTERFACE=wg0
VPN_NETWORK_CIDR=172.25.0.0/16
VPN_NETWORK_GATEWAY=172.25.0.1
VPN_ROUTER_IP=172.25.0.2

# Port Mappings (localhost only)
APP_PORT_START=10091
APP_PORT_END=10100

# Cloudflare Tunnel
CF_TUNNEL_TOKEN=your-cloudflare-tunnel-token
CF_TUNNEL_PQC=true
CF_LOG_LEVEL=info

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# SaaS Application (if using example)
DB_USER=saas
DB_PASSWORD=change-this-password
DB_NAME=saasdb
JWT_SECRET=change-this-to-a-secure-random-string
DEBUG=false
